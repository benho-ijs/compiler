{
    "compilerOptions": {
        "allowJs": true,   
        "baseUrl": ".",
        "experimentalDecorators": true,
        "target": "ES2021",
        "moduleResolution": "node",        
        "module": "amd",        
        "outFile": "bundle/editor.js",
        "removeComments": true,        
        "strict": true,
        "jsx": "react",
        "jsxFactory": "global.$JSX",
        "esModuleInterop": true,
        "skipLibCheck": true,        
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "paths": {
            "@ijstech/compiler": ["."],
            "@ijstech/components": ["packages/components"]
        }
    },
    "include": [
        "test/static/editor/*.tsx"
    ]
}