{
    "compilerOptions": {
        "allowJs": true,   
        "baseUrl": ".",
        "experimentalDecorators": true,
        "target": "ES2017",
        "moduleResolution": "node",        
        "module": "amd",        
        "removeComments": true,
        "strict": true,
        "jsx": "react",
        "jsxFactory": "this.$render",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "paths": {
            "@ijstech/components": ["packages/components"]
        }
    },
    "include": [
        "test/static/**/*.tsx"
    ]
}