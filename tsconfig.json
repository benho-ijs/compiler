{
    "compilerOptions": {
        "allowJs": true,   
        "baseUrl": ".",
        "experimentalDecorators": true,
        "target": "ES2021",
        "moduleResolution": "node",
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "types",        
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "paths": {
            "@ijstech/compiler": ["./src"],
            "@ijstech/components": ["packages/components"]
        }
    },
    "include": [
        "src/*.ts"
    ]
}