{
    "compilerOptions": {        
        "baseUrl": ".",        
        "target": "ES2017",        
        "module": "CommonJS",
        "declaration": false,  
        "moduleResolution": "Node",    
        "allowSyntheticDefaultImports": true,         
        "outDir": "lib",        
        "removeComments": true,        
        "resolveJsonModule": true,
        "esModuleInterop": true,        
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src"
    ]
}